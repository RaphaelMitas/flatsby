{
  "extends": "@flatsby/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/hooks/*": ["./hooks/*"]
    }
  },
  "include": ["src", "hooks"],
  "exclude": ["node_modules"]
}
